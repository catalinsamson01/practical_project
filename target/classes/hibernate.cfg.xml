<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- Set MySQL Driver path -->
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <!-- Set host url -->
        <!-- localhost ip - 127.0.0.1 -->
        <property name="connection.url">jdbc:mysql://localhost:3306/practical_project</property>

        <!-- Set username -->
        <property name="connection.username">sdauserapp</property>

        <!-- Set password -->
        <property name="connection.password">sdauserapp</property>

        <!-- Set Database dialect -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Set show_sql property -->
        <property name="show_sql">true</property>

        <!-- Set format_sql property -->
        <property name="format_sql">true</property>

        <!-- Set hbm2ddl property -->
        <property name="hbm2ddl.auto">create-drop</property>



    </session-factory>
</hibernate-configuration>